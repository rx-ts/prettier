{
  "name": "@rxts/prettier",
  "version": "0.0.0",
  "description": "Opinionated but Incredible Prettier plugins.",
  "repository": "git@github.com:rx-ts/prettier.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build && run-p build:*",
    "build:r": "r -g \"{'prettier/parser-babylon':'prettierPlugins.babylon','prettier-plugin-pkg':'prettierPlugins.pkg','prettier-plugin-sh':'prettierPlugins.sh'}\" -x mvdan-sh -p",
    "build:ts": "tsc -b",
    "lint": "run-p lint:*",
    "lint:es": "cross-env PARSER_NO_WATCH=true eslint . --cache --ext js,md,ts -f friendly",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc --noEmit",
    "test": "jest",
    "type-coverage": "type-coverage --cache --detail --ignore-files *.d.ts --strict"
  },
  "devDependencies": {
    "@1stg/lib-config": "^0.1.20",
    "@1stg/tslint-config": "^0.5.7",
    "@babel/types": "^7.7.4",
    "@pkgr/imagemin": "^0.3.1",
    "@types/jest": "^24.0.23",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.149",
    "@types/prettier": "^1.19.0",
    "core-js": "^3.4.5",
    "js-yaml": "^3.13.1",
    "lerna": "^3.19.0",
    "lodash": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "react": "^16.12.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "type-coverage": "^2.3.1",
    "typescript": "^3.7.2"
  },
  "resolutions": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "eslint-plugin-prettier": "^3.1.1"
  },
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "moduleNameMapper": {
      "^prettier-plugin-pkg$": "<rootDir>/packages/pkg/src",
      "^prettier-plugin-sh$": "<rootDir>/packages/sh/src"
    },
    "preset": "ts-jest"
  },
  "prettier": "@1stg/prettier-config",
  "renovate": {
    "extends": "@1stg"
  },
  "typeCoverage": {
    "atLeast": 100
  }
}
